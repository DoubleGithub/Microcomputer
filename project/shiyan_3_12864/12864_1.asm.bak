	RET
DELAYXMS:
	PUSH CX
	MOV CX,0040H
DELY2:
	PUSH CX
	MOV CX,3E8H
	LOOP $
	POP CX
	LOOP DELY2
	POP CX
	LOOP DELAYXMS
	RET

